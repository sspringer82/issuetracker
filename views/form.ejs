<form action="/save" method="post">
    <input type="hidden" name="id" value="<%= issue.id %>">

    <div>
        <label for="title">Title:</label>
        <input type="text" name="title" value="<%= issue.title %>">
    </div>

    <div>
        <label for="title">Description:</label>
        <input type="text" name="title" value="<%= issue.description %>">
    </div>

    <div>
        <label for="status">Status:</label>
        <select name="status">
            <% states.forEach((state, index) => {
                const selected = issue.state === index ? 'selected="selected"' : '';
                %>
                <option value="<%= index %>" <%= selected %>><%= state %></option>
            <% }) %>
        </select>
    </div>

    <div>
        <label for="creator">Creator:</label>
        <select name="creator">
            <% users.forEach(function(user) { 
                const selected = user.id === creatorId ? 'selected="selected"' : '';
                %>
                <option 
                    value="<%= user.id %>"
                    <%= selected %>
                    ><%= user.username %></option>
            <% }) %> 
        </select>
    </div>

    <div>
        <label for="creator">Assignee:</label>
        <select name="creator">
            <% users.forEach(function(user) { 
                const selected = user.id === assigneeId ? 'selected="selected"' : '';%>
                <option value="<%= user.id %>"><%= user.username %></option>
            <% }) %> 
        </select>
    </div>

    <div>
        <input type="submit" value="save">
    </div>

</form>