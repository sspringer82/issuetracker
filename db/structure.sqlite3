CREATE TABLE issues (
    id INTEGER PRIMARY KEY,
    title TEXT,
    description TEXT,
    status INTEGER,
    created INTEGER,
    creator INTEGER,
    assignee INTEGER,
    FOREIGN KEY (creator) REFERENCES users(id),
    FOREIGN KEY (assignee) REFERENCES users(id)
);

